<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/a_gray_shop"
  android:paddingLeft="5dp"
  android:paddingRight="5dp"
  android:paddingTop="5dp"
  android:paddingBottom="10dp"
    android:id="@+id/item_parent"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/coins_store"
        android:scaleType="fitCenter"

        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/itemIcon"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="18sp"
            android:textColor="@color/narenji"
            android:id="@+id/countLabel"
            android:layout_gravity="center"
            />



        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="16sp"
            android:textColor="@color/tabs_color"
            android:id="@+id/countLabel_discount"
            android:layout_margin="5dp"


            />

    </LinearLayout>


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:id="@+id/buyButton"
        android:scaleType="fitCenter"
        android:layout_marginRight="10dp"
        android:src="@drawable/bag"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="213"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/buyButton"
        android:layout_marginRight="10dp"
        android:textColor="@color/tabs_color"
        android:id="@+id/tv_price"
        />

</RelativeLayout>